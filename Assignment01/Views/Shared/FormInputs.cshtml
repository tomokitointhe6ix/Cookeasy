@model Recipe

<input type="hidden" asp-for="RecipeId" />
<div class="form-group">
    <label asp-for="RecipeName">Recipe Name:</label>
    <div><span asp-validation-for="RecipeName" class="text-danger"></span></div>
    <input class="form-control" asp-for="RecipeName" />
</div>
<div class="form-group">
    <label asp-for="Description">Description:</label>
    <div><span asp-validation-for="Description" class="text-danger"></span></div>
    <input class="form-control" asp-for="Description" />
</div>
<div class="form-group">
    <label asp-for="Ingredients">Ingredients:</label>
    <div><span asp-validation-for="Ingredients" class="text-danger"></span></div>
    <input class="form-control" asp-for="Ingredients" />
</div>
<div class="form-group">
    <label asp-for="Chef">Chef:</label>
    <div><span asp-validation-for="Chef" class="text-danger"></span></div>
    <input class="form-control" asp-for="Chef" />
</div>
<div class="form-group">
    <label asp-for="PreparationTime">Preparation Time (Min):</label>
    <div><span asp-validation-for="PreparationTime" class="text-danger"></span></div>
    <input class="form-control" asp-for="PreparationTime" />
</div>