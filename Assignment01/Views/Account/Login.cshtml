@model ViewModels.LoginModel
@{
    ViewBag.Title = "Log In";
    Layout = "_Layout";
}


<!-- Nav -->
<nav id="nav">
    <ul>
        <li class="active"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li><a asp-controller="Home" asp-action="RecipeList">Recipe List</a></li>
        <li><a asp-action="AddRecipe">Add Recipe</a></li>
    </ul>
</nav>
    </div>
</div>
<!-- Header -->
<!-- Main -->
<div id="main">

    <!-- Featured -->
    <div class="container">
        <div class="panel panel-success">
            <div class="panel-heading text-center"><h4>Log In</h4></div>
            <div class="panel-body">
                <form asp-controller="Account" form asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" />
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <div><span asp-validation-for="Name" class="text-danger"></span></div>
                        <input class="form-control" asp-for="Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <div><span asp-validation-for="Password" class="text-danger"></span></div>
                        <input class="form-control" asp-for="Password" />
                    </div>
                    <button class="submitbtn" type="submit">Log In</button>
                </form>
            </div>
        </div>
    </div>
</div>


